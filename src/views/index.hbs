<h1>Contacts</h1>

<div class="row p-5 gx-4">
    {{#each contacts}}
        <div class="container col-md-4 my-2">
            <div class="card">
                <div class="card-body">
                    <h3>{{firstname}}  {{lastname}}</h3>
                    <p>{{email}}</p>
                    <p>{{phone}}</p>
                </div>
                <div class="col-md-4 d-grid gap-2 my-1">
                    <a class="btn btn-danger" href="/delete-contact/{{id}}">Delete</a>
                </div>
                <div class="col-md-4 d-grid gap-2">
                    <a class="btn btn-secondary" href="/edit-contact/{{id}}">Edit</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>>

<div class="container col-md-8 my-5">
    <div class="card">
        <div class="card-body">
            <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="POST">
                <div class="mb-3">
                    <label for="fnFormControlInput1" class="form-label">First Name</label>
                    <input type="text" name="firstname" class="form-control" id="fnFormControlInput1" placeholder="First Name"
                        value="{{contact.firstname}}">
                </div>
                <div class="mb-3">
                    <label for="lnFormControlInput2" class="form-label">Last Name</label>
                    <input type="text" name="lastname" class="form-control" id="lnFormControlInput2" placeholder="Last Name"
                        value="{{contact.lastname}}">
                </div>
                <div class="mb-3">
                    <label for="emFormControlInput1" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="emFormControlInput1" placeholder="name@example.com"
                        value="{{contact.email}}">
                </div>
                <div class="mb-3">
                    <label for="phFormControlInput1" class="form-label">Phone</label>
                    <input type="phone" name="phone" class="form-control" id="phFormControlInput1" placeholder="5510109090"
                        value="{{contact.phone}}">
                </div>
                <div class="contaier col-md-6 offset-md-3 mt-5">
                    <div class="d-grid gap-2">
                        <button class="btn btn-success" type="submit">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>